<h1><%= @user.name %>さんのページ</h1>
      
<p>メールアドレス: <%= @user.email %></p>

<table>
  <thead>
    <tr>
      <th>塾名</th>
      <th>概要</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if current_user.role == "executive" %>
      <% current_user.schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.overview %></td>
        <td><%= link_to 'Edit', edit_school_path(school)  %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% else %>
      <% @favorite_schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.overview %></td>
        <td><%= link_to '詳細', school_path(school.id) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>


<% if @user == current_user %>
  <%= link_to "プロフィールの編集", edit_user_path %>
<% end %>
