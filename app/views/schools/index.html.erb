
<h1>塾一覧</h1>

<table>
  <thead>
    <tr>
      <th>塾名</th>
      <th>都道府県</th>
      <th>市区町村</th>
      <th>電話番号</th>
      <th>概要</th>
      <th>写真</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.prefecture %></td>
        <td><%= school.city %></td>
        <td><%= school.phone %></td>
        <td><%= school.overview %></td>
        <td><%= school.image %></td>
        <td><%= link_to 'Show', school %></td>
        <% if current_user && current_user == school.user %>
          <td><%= link_to 'Edit', edit_school_path(school)  %></td>
          <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>塾検索</h2>
<%= search_form_for @q, url: schools_path do |f| %>
  <%= f.label :name_cont, '塾名' %>
  <%= f.search_field :name_cont %>
  <%= f.label :prefecture_cont, '都道府県' %>
  <%= f.search_field :prefecture_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>

<br>


<%= link_to 'New School', new_school_path %>
<% if current_user %>
  <%= link_to 'マイページ', user_path(current_user) %>
<% end %>  
